{% extends "layout.html.twig" %}

{% block title %}{{ post.title }} - Redis Board{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <article>
                <header class="mb-4">
                    <h1>{{ post.title }}</h1>
                    <div class="d-flex justify-content-between align-items-center text-muted">
                        <span>작성자: {{ post.author }}</span>
                        <span>작성일: {{ post.created_at }}</span>
                    </div>
                    {% if post.created_at != post.updated_at %}
                        <div class="text-muted small">
                            수정일: {{ post.updated_at }}
                        </div>
                    {% endif %}
                </header>

                <div class="content mb-4">
                    {{ post.content|nl2br }}
                </div>

                <footer class="d-flex gap-2">
                    <a href="/" class="btn btn-secondary">목록으로</a>
                    <a href="/posts/{{ post.id }}/edit" class="btn btn-warning">수정</a>
                    <form method="post" action="/posts/{{ post.id }}" class="d-inline">
                        <input type="hidden" name="_METHOD" value="DELETE">
                        <button type="submit" class="btn btn-danger" 
                                onclick="return confirm('정말 삭제하시겠습니까?')">삭제</button>
                    </form>
                </footer>
            </article>
        </div>
    </div>
{% endblock %}
