{
  "name": "redis-board",
  "version": "1.0.0",
  "description": "Redis-based PHP bulletin board",
  "main": "index.js",
  "scripts": {
    "build-css": "npx tailwindcss -i ./assets/css/input.css -o ./public/css/style.css --watch",
    "build-css-prod": "npx tailwindcss -i ./assets/css/input.css -o ./public/css/style.css --minify",
    "dev": "npm run build-css",
    "build": "npm run build-css-prod"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.0",
    "@tailwindcss/cli": "^4.1.0"
  },
  "keywords": [
    "php",
    "redis",
    "slim",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT"
}
