{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "redisboard/app",
    "description": "Redis-based PHP bulletin board using Slim 4",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-redis": "*",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "twig/twig": "^3.7",
        "slim/twig-view": "^3.3",
        "monolog/monolog": "^3.4",
        "vlucas/phpdotenv": "^5.5",
        "symfony/serializer": "^7.1",
        "symfony/property-access": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpstan/phpstan-phpunit": "^1.3",
        "squizlabs/php_codesniffer": "^3.8",
        "friendsofphp/php-cs-fixer": "^3.64"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "php-cs-fixer": "php-cs-fixer fix",
        "quality": [
            "@phpstan",
            "@phpcs",
            "@php-cs-fixer --dry-run"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "*": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}